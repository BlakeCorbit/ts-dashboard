# Zendesk API (reuse from other projects)
ZENDESK_SUBDOMAIN=bayiq
ZENDESK_EMAIL=your-email@autovitalsinc.com
ZENDESK_API_TOKEN=your-zendesk-api-token

# Churn Analyzer Settings
CHURN_LOOKBACK_DAYS=180
RISK_WEIGHT_VOLUME=0.20
RISK_WEIGHT_ESCALATION=0.20
RISK_WEIGHT_SENTIMENT=0.15
RISK_WEIGHT_VELOCITY=0.20
RISK_WEIGHT_RESOLUTION=0.10
RISK_WEIGHT_BREADTH=0.10
RISK_WEIGHT_RECENCY=0.05

# Churn Signature Settings (early warning system)
CHURN_LOOKBACK_WINDOW=90
CHURN_MIN_SAMPLE_SIZE=3
CHURN_SIGNATURE_MAX_AGE_DAYS=7
CHURN_SCORE_CRITICAL=75
CHURN_SCORE_HIGH=50
CHURN_SCORE_MEDIUM=25
